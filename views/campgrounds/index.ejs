<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron"> <!-- A jumbotron indicates a big grey box for calling extra attention to some special content or information. -->
        <div class="container">
            <h1>Welcom To YelpCamp!</h1>
            <p>view our hand-picked campgrounds frrom all over the world</p>
            <p>     
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <!-- Bootstrap Grid System -->
    <div class="row text-center" style="display:flex; flex-wrap: wrap; "> 
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail"> <!-- use .img-thumbnail to give an image a rounded 1px border appearance. -->
                    <img src=" <%= campground.image %>" >
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>   

<%- include("../partials/footer") %>